# Test Database Connection Settings
MSSQL_HOST=your-test-server.example.com
MSSQL_PORT=1433
MSSQL_USER=your_test_user
MSSQL_PASSWORD=your_test_password
MSSQL_DATABASE=your_test_database

# Security Settings
MSSQL_ENCRYPT=true
MSSQL_TRUST_SERVER_CERTIFICATE=true
MSSQL_ENABLE_ARITH_ABORT=true

# Pool Settings (Minimal for testing)
MSSQL_POOL_MAX=5
MSSQL_POOL_MIN=0
MSSQL_POOL_IDLE_TIMEOUT=30000
MSSQL_POOL_ACQUIRE_TIMEOUT=30000

# Query Settings
MSSQL_QUERY_TIMEOUT=30000
MSSQL_MULTIPLE_STATEMENTS=false
MSSQL_ROWS_AS_ARRAY=false

# Debug Settings (Enabled for testing)
MSSQL_DEBUG=true
MSSQL_DEBUG_SQL=true 

# Note: Copy this file to .env.test and update the values with your configuration
# Do not commit the .env.test file to version control
