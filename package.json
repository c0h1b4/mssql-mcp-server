{
  "name": "mssql-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for interacting with Microsoft SQL Server databases",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "./scripts/build.sh",
    "start": "node build/index.js",
    "dev": "ts-node-esm src/index.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:integration": "./scripts/test.sh",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky install",
    "clean": "rm -rf build coverage node_modules",
    "reinstall": "npm run clean && npm install",
    "precommit": "npm run lint && npm run test"
  },
  "keywords": [
    "mcp",
    "mssql",
    "sql-server",
    "database",
    "typescript"
  ],
  "author": "MSSQL MCP Server Contributors",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.4.1",
    "dotenv": "^16.4.7",
    "mssql": "^11.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/mssql": "^9.1.6",
    "@types/node": "^22.12.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/mssql-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/mssql-mcp-server/issues"
  },
  "homepage": "https://github.com/yourusername/mssql-mcp-server#readme"
}
